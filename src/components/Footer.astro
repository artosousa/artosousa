---
import { Image } from 'astro:assets';
import bgImage from '../assets/topography_CTA.png'
const {title, copy, background } = Astro.props
---

<section  id="contact" class="relative py-[146px] bg-[#006075] px-8 lg:px-0  !text-white text-center flex flex-col items-center justify-center w-full">
    <div id="bg" class="z-1 h-full absolute left-0 top-0 opacity-[0.05]">
        <Image class="object-cover h-full w-full " src={bgImage} alt="topography BG Image" />
    </div>
    <div class="container z-[3] inline-flex flex-col lg:flex-row gap-x-12 gap-y-24">
       <div class="text-left w-full lg:w-1/2">
             <h1 class="mb-[38px] font-bold text-[28px] lg:text-[42px]">{title}</h1>
            <p class="w-full max-w-[925px]  text-[16px] lg:text-[19px] leading-[32px]  lg:leading-[35px]">{copy}</p>
       </div>
       <div class="text-left w-full lg:w-1/2">
            <form name="contact" data-netlify="true" class="inline-flex flex-wrap gap-8">
                
                    <input class="lg:w-[45%] w-[94.5%] placeholder-white text-[14px]  px-2 pt-4 pb-[5px] bg-transparent border-b-white border-solid border-b-[1px]" type="text" name="name" placeholder="Name"/>
                    <input class="lg:w-[45%] w-[94.5%] placeholder-white text-[14px]  px-2 pt-4 pb-[5px] bg-transparent border-b-white border-solid border-b-[1px]" name="email" placeholder="Email" />
                    <input class="lg:w-[45%] w-[94.5%] placeholder-white text-[14px]  px-2 pt-4 pb-[5px] bg-transparent border-b-white border-solid border-b-[1px]" name="company" placeholder="Company Name"/>
                    <input class="lg:w-[45%] w-[94.5%] placeholder-white text-[14px]  px-2 pt-4 pb-[5px] bg-transparent border-b-white border-solid border-b-[1px]" name="size" placeholder="Company Size" />
                    <textarea class="w-[94.5%] placeholder-white text-[14px]  h-32 px-2 pt-4 pb-[5px] bg-transparent border-b-white border-solid border-b-[1px]" name="message" placeholder="Your Message" ></textarea>
                
                    <button class="uppercase button mt-[26px] rounded-[30px] gap-4  items-center justify-center py-[18px] px-[48px] flex flex-row cursor-pointer text-[#006075] bg-white" type="submit">Send</button>
               
            </form>
       </div>
    </div>
</section>